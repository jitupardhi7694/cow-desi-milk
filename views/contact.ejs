        <div class="mt-5"></div>
        <div class="row">
            <div class="col-md-6">
                <div id="carouselExampleInterval" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active" data-bs-interval="10000">
                            <img src="/images/contact1.jpg" class="d-block w-100  contact_crousal_img" alt="...">
                        </div>
                        <div class="carousel-item" data-bs-interval="2000">
                            <img src="/images/contact2.jpg" class="d-block w-100 contact_crousal_img" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="/images/conatct4.jpg" class="d-block w-100 contact_crousal_img" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="/images/conatct5.jpg" class="d-block w-100 contact_crousal_img" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="/images/conatct3.jpg" class="d-block w-100 about_crousal_img" alt="...">
                        </div>
